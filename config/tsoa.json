{
  "noImplicitAdditionalProperties": "throw-on-extras",
  "entryFile": "src/app.ts",
  "controllerPathGlobs": ["src/controllers/*.controller.ts"],
  "spec": {
    "outputDirectory": "./swagger",
    "specVersion": 3,
    "validate": true,
    "specMerging": "recursive",
    "spec": {
      "servers": [
        {
          "url": "http://localhost:3000",
          "description": "Sweepic local server"
        },
        {
          "url": "http://3.37.137.212:3000",
          "description": "Sweepic server"
        }
      ],
      "paths": {
        "/memo/image-format/folders": {
          "post": {
            "requestBody": {
              "required": true,
              "content": {
                "multipart/form-data": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "image": {
                        "type": "string",
                        "format": "binary",
                        "description": "파일 업로드"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "/memo/image-format/folders/{folderId}": {
          "post": {
            "requestBody": {
              "required": true,
              "content": {
                "multipart/form-data": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "image": {
                        "type": "string",
                        "format": "binary",
                        "description": "파일 업로드"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "/memo/text-format/folders/{folderId}": {
          "patch": {
            "requestBody": {
              "required": true,
              "content": {
                "multipart/form-data": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "base64_image": {
                        "type": "string",
                        "format": "binary",
                        "description": "OCR 처리를 위한 이미지 업로드"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "/memo/text-format/folders": {
          "post": {
            "requestBody": {
              "required": true,
              "content": {
                "multipart/form-data": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "base64_image": {
                        "type": "string",
                        "format": "binary",
                        "description": "OCR 처리를 위한 이미지 업로드"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "securityDefinitions": {
      "sessionAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "connect.sid"
      }
    },
    "security": [{"sessionAuth": []}]
  },
  "routes": {
    "routesDir": "./src/routers",
    "middleware": "express",
    "routesFileName": "tsoaRoutes.ts",
    "esm": true
  }
}
